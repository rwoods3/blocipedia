<section class="d-flex justify-content-center">
	<h3 class="text-center">Blocipedia: Social, Markdown Wikis</h3>
</section>

<section class="d-flex rounded flex-column align-items-center">
	<div class="d-flex flex-column align-items-center jumbotron w-50">
	  <p>Create and share Markdown Wikis</p>
	  <% if current_user %>
      <%= button_to "Create Public Wiki", new_wiki_path, method: :get, class: 'btn-primary' %>
    <% else %>
		  <%= link_to "Sign Up", new_user_registration_path, :class => 'btn btn-primary btn-md' %>
		<% end %>
	</div>
</section>

<section class="d-flex flex-row justify-content-between">
  <div class="d-flex p-5"></div>
  <div class="d-flex flex-column">
  	<p>Create as many public wikis as you want</p>
  	<%= image_tag('free', size: 250, alt: 'free image') %>
  </div>
  <div class="d-flex flex-column">
  	<p>Create private wikis</p>
  	<%= image_tag('premium', size: 250, alt: 'premium image') %>
  </div>
  <div class="d-flex p-5"></div>
</section>